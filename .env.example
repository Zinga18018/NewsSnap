# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# S3 Buckets
S3_BUCKET_DATA=llmops-ml-data
S3_BUCKET_MODELS=llmops-ml-models
S3_BUCKET_METRICS=llmops-ml-metrics

# SageMaker
SAGEMAKER_ROLE_ARN=arn:aws:iam::YOUR_ACCOUNT_ID:role/SageMakerExecutionRole
SAGEMAKER_INSTANCE_TYPE=ml.m5.large

# ECR
ECR_REPOSITORY=llmops-training

# Model Configuration
MODEL_NAME=distilbert-base-uncased
NUM_LABELS=4
MAX_SEQ_LENGTH=128
BATCH_SIZE=32
LEARNING_RATE=2e-5
NUM_EPOCHS=3

# Project
PROJECT_NAME=llmops-agnews
ENVIRONMENT=dev
